generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Corpus {
  id         Int       @id @default(autoincrement())
  userId     BigInt?   @map(name: "user_id")
  createdAt  DateTime  @map(name: "created_at") @default(now())
  updatedAt  DateTime  @map(name: "updated_at") @updatedAt
  name       String    @db.VarChar(100)

  textSamples TextSample[]
  nGrams      NGram[]

  @@map("corpora")
}

model TextSample {
  id         BigInt    @id @default(autoincrement())
  createdAt  DateTime  @map(name: "created_at") @default(now())
  corpus     Corpus    @relation(fields: [corpusId], references: [id], onDelete: Cascade)
  corpusId   Int       @map(name: "corpus_id")
  body       String

  @@map("text_samples")
}

model NGram {
  id        BigInt  @id @default(autoincrement())
  corpus    Corpus  @relation(fields: [corpusId], references: [id], onDelete: Cascade)
  corpusId  Int     @map(name: "corpus_id")
  n         Int     @db.SmallInt
  body      String  @db.VarChar(10)
  weight    Int     @default(1)

  @@map("ngrams")
  @@unique([corpusId, body])
  @@index([corpusId, n, weight])
}
